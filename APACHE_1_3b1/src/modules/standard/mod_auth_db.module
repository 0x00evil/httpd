Name: db_auth_module
ConfigStart
    if ./helpers/TestCompile func dbopen; then
        :
    else
	case "$PLAT" in
	    *-linux*)
		# many systems have -ldb installed
		DB_LIB=""
		if ./helpers/TestCompile lib db; then
		    DB_LIB="-ldb"
		fi
		;;
	esac
	LIBS="$LIBS $DB_LIB"
	if [ "X$DB_LIB" != "X" ]; then
	    echo " + using $DB_LIB for mod_auth_db"
	fi
    fi
ConfigEnd
